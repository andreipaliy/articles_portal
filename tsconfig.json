{
  "compilerOptions": {
    "outDir": "./dist/",
    // commented temporary because it disables TypeScript support of jest config 
    // "types": ["@types/jest"],
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }, 
  // "include": [
  //   "./config/jest/setupTests.ts"
  // ]

}