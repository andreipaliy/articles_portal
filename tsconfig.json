{
  "compilerOptions": {
    "outDir": "./dist/",
    // commented temporary because it disables TypeScript support of jest config 
    // "types": ["@types/jest"],
    "types": [
      "node"
    ],
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
  ]
}